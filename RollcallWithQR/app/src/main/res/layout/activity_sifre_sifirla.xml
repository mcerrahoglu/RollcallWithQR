<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.sifre_sifirla">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/sifre_girText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Yeni Şifre Gir"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/sifre_onaylaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Şifre Onayla"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/sifre_girText"
        app:layout_constraintStart_toStartOf="@+id/sifre_girText"
        app:layout_constraintTop_toBottomOf="@+id/sifre_girText" />

    <Button
        android:id="@+id/sifre_onayla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Şifre Onayla"
        app:layout_constraintEnd_toEndOf="@+id/sifre_onaylaText"
        app:layout_constraintStart_toStartOf="@+id/sifre_onaylaText"
        app:layout_constraintTop_toBottomOf="@+id/sifre_onaylaText" />
</androidx.constraintlayout.widget.ConstraintLayout>