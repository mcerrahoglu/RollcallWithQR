<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.forgot_password">
        <EditText
            android:id="@+id/ogrtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="T.C No"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/ogrno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Öğrenci No"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/ogrtc"
            app:layout_constraintStart_toStartOf="@+id/ogrtc"
            app:layout_constraintTop_toBottomOf="@+id/ogrtc" />

        <EditText
            android:id="@+id/ogr_soyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Soyad"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/ograd"
            app:layout_constraintStart_toStartOf="@+id/ograd"
            app:layout_constraintTop_toBottomOf="@+id/ograd" />

        <EditText
            android:id="@+id/ogr_eposta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="E Posta"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/ogr_soyad"
            app:layout_constraintStart_toStartOf="@+id/ogr_soyad"
            app:layout_constraintTop_toBottomOf="@+id/ogr_soyad" />

        <Button
            android:id="@+id/resetpassword"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_marginTop="15dp"
            android:onClick="resetPasswordOgr"
            android:text="Şifre Sıfırla"
            app:layout_constraintEnd_toEndOf="@+id/ogr_eposta"
            app:layout_constraintStart_toStartOf="@+id/ogr_eposta"
            app:layout_constraintTop_toBottomOf="@+id/ogr_eposta" />

        <EditText
            android:id="@+id/ograd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Ad"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/ogrno"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ogrno"
            app:layout_constraintTop_toBottomOf="@+id/ogrno" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>